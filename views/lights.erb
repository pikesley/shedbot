<hr />
<h1>Light Control</h1>
<hr />
<div id='controls'>
  <% RELAYS.each_pair do |name, relay| %>
    <div class='row'>
      <div class='col-xs-12' id='<%= name %>-state'>
        <%= name %> <i class='fa fa-lightbulb-o'></i>
      </div>
      <div class='col-xs-12'>
        <a id='<%= name %>-control' class='light-control'>
          <i class='fa' id='<%= name %>-toggle'></i>
        </a>
      </div>
    </div>
    <hr />
  <% end %>
</div>

<%= erb :'includes/javascript/lights' %>
